                <th class="col-xs-1 text-center">Priority</th>
                <th class="col-xs-4">Deckription</th>
                <th class="col-xs-2"></th>
              </div>
            </div>
          </tr>
        </thead>
        <tbody>

          <% @completed_tasks.each do |task| %>
          <%= render partial: 'task', object: task %>
          <% end %></tbody>
      </table>
    </div>
  </div>
</div>

<%= submit_tag "Delete selected", method: :delete, type: "submit", data: { confirm: "Are you sure?" }, class: "btn btn-danger batch-del-submit but_delete"%>

<% end %>

<input type="button" value="Check All" onclick="check();">
<input type="button" value="Uncheck All" onclick="uncheck();">