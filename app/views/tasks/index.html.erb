<h1>My Tasks</h1>
<%= link_to "Logout", destroy_user_session_path , method: :delete %>
<%= link_to "Edit profile", edit_user_registration_path %>

<div class="buffer-top">
  <%= link_to "New task", new_task_path, class: 'btn btn-primary' %></div>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <%= form_tag destroy_multiple_tasks_path  do  %>
      <ul>

        <table class="table pretty sortable table-bordered ">
          <thead>
            <tr>
              <div class="content">
                <div class="row">
                  <th class="col-xs-1"></th>
                  <th class="col-xs-3">Title</th>
                  <th class="col-xs-1 text-center">Due Date</th>
                  <th class="col-xs-1 text-center">Priority</th>
                  <th class="col-xs-4">Deckription</th>
                  <th class="col-xs-2"></th>
                </div>
              </div>
            </tr>
          </thead>
          <tbody>
            <% @tasks.each do |task| %>

            <li class="checkbox taskwrapper">

              <%= link_to edit_task_path(task) do %>
              <%= render partial: 'task', object: task %>
              <% end %></li>
          </ul>
          <% end %></tbody>
      </table>
    </div>
  </div>
</div>
<%= submit_tag "Delete selected", method: :delete, type: "submit", data: { confirm: "Are you sure?" }, class: "btn btn-danger batch-del-submit but_delete"%>
<% end %>

<%= form_tag destroy_multiple_tasks_path  do  %>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <table class="table pretty sortable table-bordered ">
        <thead>
          <tr>
            <div class="content">
              <div class="row">
                <th class="col-xs-1"></th>
                <th class="col-xs-3">Title</th>
