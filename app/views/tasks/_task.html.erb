<tr class="hover1">
  <div  class="hover1">
    <div class="task priority_<%= task.priority  %> completed_<%= task.completed %>  ">
      <th>
        <%= check_box_tag 'tasks[]', task.id, false, class: 'batch-del batch-del-checkbox' %></th>

      <th class="title"  style="padding-left: 20px">
        <%= link_to task.title, task_path(task) %></th>
      <th class="title"  style="padding-left: 20px">
        <%= task.due_date %></th>
      <th class="title"  style="padding-left: 20px">
        <%= task.priority %></th>
      <th class="title"  style="padding-left: 20px">
        <%= task.description %></th>

      <th>
        <div class="hover2 pull-right" >
          <%= link_to content_tag('span', '', class: 'fa fa-pencil'), edit_task_path(task), class: 'action' %>
          <%= link_to content_tag('span', '', class: 'fa fa-trash'), task, method: :delete, class: 'action' %>
          <% unless task.completed? %>
          <%= link_to content_tag('span', '', class: 'fa fa-check-square-o'), complete_task_path(task), data: {method: :put}, class:'done action' %>
          <% else %>
          <%= link_to content_tag('span', '', class: 'fa fa-minus'), not_complete_task_path(task), data: {method: :put}, class:'done action' %>
        <% end %></div>
      </th>
    </div>
  </div>
</tr>